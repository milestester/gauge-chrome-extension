{
  "manifest_version": 2,

  "name": "Gauge",
  "description": "This extension gives a breakdown of time spent on certain websites.",
  "version": "1.0",

  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "idle"
  ],

  "browser_action": {
    "default_icon": "icon128.png",
    "default_popup": "popup.html"
  },

  "background" : {
    "scripts": ["TimeTracker.js", "Site.js", "eventPage.js"],
    "persistent": false
  },

 "options_ui": {
  "page": "options.html",
  "chrome_style": true
  },

  "icons" : {
    "128" :  "icon128.png"
  }
}